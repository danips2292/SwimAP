<%= image_tag 'bg.jpeg', height:'100', :id => "bg" %>
<div class="outer_frame">
  <div class="middle_frame">
     <div class ="login">
      <%= image_tag 'logo.png', height:'50', class:'logo'%>
      <div class='form_container'>
      <H2> Crea una nueva cuenta </H2>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
          <%= form_for(:user, :url => {:action => 'new'}) do |f| %>
            <table>
            <tr>
                <td> Nombre Completo </td>
                <td> <%= f.text_field(:full_name) %> </td>
              </tr>
              <tr>
                <td> Email </td>
                <td> <%= f.text_field(:email) %> </td>
              </tr>
               <tr>
                <td> Confirmar Email </td>
                <td> <%= f.text_field(:email_confirmation) %> </td>
              </tr>
              <tr>
                <td> Contraseña </td>
                <td> <%= f.password_field(:password) %> </td>
              </tr>
              <tr>
                <td> Confirmar Contraseña </td>
                <td> <%= f.password_field(:password_confirmation) %> </td>
              </tr>

               <tr>
                <td> Grupo </td>
                <td>
                <div class='select-style'>
                 <%=  f.collection_select :group_id, Group.all , :id, :name, include_blank: false  %> 
                 </div>
                 </td>
              </tr>
              <tr>
                <td> &nbsp; </td>
                <td> <%= f.submit("Crear") %> </td>
              </tr>
            </table>
            <%end%>


         <p>¿Ya tienes una cuenta? <%= link_to("Inicia Sesión", :action => 'index') %> </p>
      </div>

    </div>
  </div>
</div>
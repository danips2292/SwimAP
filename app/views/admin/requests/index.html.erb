<h1>Solicitudes</h1>

<table>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.full_name %></td>
			<td><%= Group.find(user.group_id).name %></td>
			<td> <%= button_to( 'Aceptar', action: 'accept', id: user.id) %> </td>
			<td> <%= button_to( 'Rechazar', action: 'reject', id: user.id) %> </td>
		</tr>
	<%end%>
</table>
<h1>Documentos</h1>

<table>
 <tr>
   <th>Titulo</th>
   <th>Grupo</th>
   <th>Link</th>
    <th colspan="3"></th>
 </tr>

 <% @documents.each do |document| %>
   <tr>
     <td><%= document.title %></td>
     <% if document.group_id != nil  %>
        <td><%= Group.find(document.group_id).name %></td>
    <% else %>
        <td></td>
    <%end%>
     <td><%= link_to "Link", document.text %></td>
     </td>
   </tr>
 <% end %>
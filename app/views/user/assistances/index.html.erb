<h1>Mis Asistencias</h1>
<table> 
<tr> <th> Identificador </th> <th> Fecha </th> <th> Presente</th></tr>
<% @assistancesGroup.each do |assistance| %>
	
	<tr> <td> <%= assistance.name %>  </td>
		<td> <%=  AssistancesUser.where(assistance_id: assistance.id, user_id: @user.id).first.updated_at.to_date %>  </td>
		<td>
		<%  if AssistancesUser.where(assistance_id: assistance.id, user_id: @user.id).first.present %>
			<%= "Si" %>
			<% else %>
			<%= "No" %>
			<%end %>
		</td>

<% end %>

</table>
body{

	background-image: url(<%= asset_path 'bg.jpeg' %>);
	font-family: 'Arvo', serif;
	margin:0px;
	padding: 0px;
}
#bg {
  position: fixed; 
  top: 0; 
  left: 0; 
  min-width: 100%;
  min-height: 100%;
}
.outer_frame {
    display: table;
    position: absolute;
    height: 100%;
    width: 100%;
}

.middle_frame {
    display: table-cell;
    vertical-align: middle;
}
.login{
	font-family: 'PT Sans', sans-serif;
	width: 500px;
	padding: 10px;
	background-color: #181918;
	color: white;
	margin-left: auto;
	margin-right: auto;


}
.login table{

	width: 200px;
	margin-left: auto;
	margin-right: auto;

}
.login img{
	text-align: center;
	padding: 0px;
    display: block;
    margin: 0 auto;
}
.login form{
	background-color: #232323;
	padding-bottom: 50px;

}
.login input[type='text'], .login input[type='password'],
.login input[type='email']{
	height: 35px;
	width: 200px;
	border: 0px solid;
    border-radius: 5px;
    font-size: 17px;
    padding-left: 5px;
}
.select-style {
    border: 1px solid #ccc;
    width: 200px;
    height: 35px;
    border-radius: 3px;
    overflow: hidden;
    background: #fafafa url("img/icon-select.png") no-repeat 90% 50%;
}
.select-style select {
    padding: 5px 8px;
    width: 130%;
    border: none;
    box-shadow: none;
    background: transparent;
    background-image: none;
    -webkit-appearance: none;
}
.login input[type='submit']{
	font-family: 'Arvo', serif;	
	color: white;
	float: right;
	height: 35px;
	width: 100px;
	border: 0px solid;
    border-radius: 5px;
    font-size: 17px;
    background-color: #50b250;
    cursor:pointer;
}
.login input[type='submit']:hover{
    background-color: #3f963f;
}

.link_container{
	padding: 10px;
	
}

.link_container a{
	color: white;
}

#topcontent{
    height: 60px;
    background-color: #181918;
    z-index: 10;
}
.logo_top_menu{
	padding: 0px;
    display: block;
    margin: 0 auto;
    float: left;
    margin-top: 15px;
    margin-left: 15px;
}
#regulartopbtnholder{
	margin-left: 10px;
}
#regulartopbtnholder a{
	color:white;
	text-decoration: none;
	font-size:15px;
	line-height: 60px;
	vertical-align: center;
	margin-left: 10px;
}
#regulartopbtnholder a:first-child{
	margin-left: 40px;

}
#sign_menu, .login_state_holder{
	color: white;
	float: right;
	margin-right: 20px;
}
#main_content{
	max-width: 800px;
	margin-top: 0px;
	margin-left: auto;
	margin-right: auto;
	padding: 10px;
	font-size: 20px;
	min-height: 1000px;
	background-color:  #f2f5f9;
	z-index: -1;
}
#main_content td{
	font-size: 18px;
}
#main_content table{
	width: 100%;
}
#main_content .delete_icon, .edit_icon {
	width: 20px;
}
.new_icon {
	width: 50px;
}
a:hover{
	background-color: none;
}
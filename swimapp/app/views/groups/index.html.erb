<h1>Grupos</h1>
<%= link_to image_tag("newIcon.png", class: 'new_icon', border: 0), new_group_path %>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tipo Grupo</th>
      <th>Horario</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.tip_group %></td>
        <td><%= group.schedule %></td>
        <td><%= link_to image_tag("editIcon.png", class: 'edit_icon', border: 0), edit_group_path(group) %></td>
        <td><%= link_to image_tag("removeIcon.png", class: 'delete_icon', border: 0), group, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<p id="notice"><%= notice %></p>

<h1>Rutinas</h1>

<table>
  <thead>
    <tr>
      <th>Distance</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routines.each do |routine| %>
      <tr>
        <td><%= routine.distance %></td>
        <td><%= routine.description %></td>
        <td><%= link_to 'Ver', routine %></td>
        <td><%= link_to 'Editar', edit_routine_path(routine) %></td>
        <td><%= link_to 'Eliminar', routine, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Rutina', new_routine_path %>
